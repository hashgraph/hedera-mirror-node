<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <artifactId>hedera-mirror-test</artifactId>
    <description>Cross module system and performance tests for the Hedera Mirror Node</description>
    <modelVersion>4.0.0</modelVersion>
    <name>Hedera Mirror Node Test</name>
    <packaging>jar</packaging>

    <parent>
        <artifactId>hedera-mirror-node</artifactId>
        <groupId>com.hedera</groupId>
        <version>0.5.1</version>
    </parent>

    <properties>
        <jmeter.test>E2E_Single_User_All_Messages.jmx</jmeter.test>
        <jmeter.subscribeThreadCount></jmeter.subscribeThreadCount>
        <skipTests>true</skipTests>
    </properties>

    <repositories>
        <!-- explicitly pull from Maven Central first -->
        <repository>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>com.bintray.jcenter</id>
            <url>https://jcenter.bintray.com/</url>
            <name>JCenter</name>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>com.hedera.hashgraph</groupId>
            <artifactId>sdk</artifactId>
            <version>1.0.0-hcs-2</version>
        </dependency>
        <dependency>
            <groupId>io.github.cdimascio</groupId>
            <artifactId>java-dotenv</artifactId>
            <version>5.0.1</version>
        </dependency>
        <dependency>
            <groupId>io.grpc</groupId>
            <artifactId>grpc-netty-shaded</artifactId>
            <version>1.24.0</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.cucumber</groupId>
            <artifactId>cucumber-java</artifactId>
            <version>4.8.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.cucumber</groupId>
            <artifactId>cucumber-junit</artifactId>
            <version>4.8.0</version>
            <scope>test</scope>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.apache.commons/commons-lang3 -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.9</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/commons-validator/commons-validator -->
        <dependency>
            <groupId>commons-validator</groupId>
            <artifactId>commons-validator</artifactId>
            <version>1.6</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M4</version>
                <configuration>
                    <parallel>classes</parallel>
                    <threadCount>10</threadCount>
                    <argLine>-Xmx1024m -Xms1024m -XX:MaxPermSize=512m</argLine>
                    <skipTests>${skipTests}</skipTests>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>3.0.0-M4</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>com.lazerycode.jmeter</groupId>
                <artifactId>jmeter-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>configure</goal>
                            <goal>jmeter</goal>
                            <goal>results</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <generateReports>true</generateReports>
                    <errorRateThresholdInPercent>0</errorRateThresholdInPercent>
                    <excludedArtifacts>
                        <excludedArtifact>ch.qos.logback:logback-classic</excludedArtifact>
                        <excludedArtifact>log4j:log4j</excludedArtifact>
                        <excludedArtifact>org.apache.logging.log4j:log4j-to-slf4j</excludedArtifact>
                    </excludedArtifacts>
                    <jmeterExtensions>
                        <jmeterExtension>io.perfmark:perfmark-api:0.20.1</jmeterExtension>
                        <jmeterExtension>io.opencensus:opencensus-api:0.24.0</jmeterExtension>
                        <jmeterExtension>com.hedera:hedera-mirror-grpc:${project.version}</jmeterExtension>
                        <jmeterExtension>com.hedera:hedera-mirror-grpc:jar:tests:${project.version}</jmeterExtension>
                    </jmeterExtensions>
                    <jMeterProcessJVMSettings>
                        <arguments>
                            <argument>-XX:MaxMetaspaceSize=256m</argument>
                            <argument>-Xmx1024m</argument>
                            <argument>-Xms1024m</argument>
                        </arguments>
                    </jMeterProcessJVMSettings>
                    <selectedConfiguration>default</selectedConfiguration>
                    <testFilesIncluded>${jmeter.test}</testFilesIncluded>
                    <propertiesUser>
                        <subscribeThreadCount>${jmeter.subscribeThreadCount}</subscribeThreadCount>
                    </propertiesUser>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
