{
  "name": "@hashgraph/mirror-rest",
  "version": "0.40.0-SNAPSHOT",
  "description": "Hedera Mirror Node REST API",
  "main": "server.js",
  "private": true,
  "engines": {
    "node": ">=14.16.0"
  },
  "scripts": {
    "dev": "nodemon app.js",
    "integrationtest": "jest --testPathPattern='__tests__/integration.test.js' --collectCoverage=false",
    "lint": "eslint --ignore-pattern node_modules/ --fix .",
    "postinstall": "node ./npm_scripts/postinstall.js",
    "test": "jest --testPathPattern='__tests__/.*\\.test\\.js'"
  },
  "author": "Hedera Mirror Node Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@awaitjs/express": "^0.8.0",
    "@godaddy/terminus": "^4.9.0",
    "@hashgraph/proto": "^2.0.0",
    "asn1js": "^2.1.1",
    "aws-sdk": "^2.983.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "extend": "^3.0.2",
    "ip-anonymize": "^0.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "long": "^4.0.0",
    "mathjs": "^9.4.4",
    "pg": "~8.7.1",
    "prom-client": "^13.2.0",
    "qs": "^6.10.1",
    "swagger-stats": "^0.99.2",
    "swagger-ui-express": "^4.1.6"
  },
  "bundledDependencies": [
    "asn1js",
    "@awaitjs/express",
    "aws-sdk",
    "body-parser",
    "compression",
    "cors",
    "express",
    "express-http-context",
    "extend",
    "ip-anonymize",
    "@godaddy/terminus",
    "@hashgraph/proto",
    "js-yaml",
    "lodash",
    "log4js",
    "long",
    "mathjs",
    "pg",
    "prom-client",
    "qs",
    "swagger-stats",
    "swagger-ui-express"
  ],
  "devDependencies": {
    "app-root-path": "^3.0.0",
    "aws-sdk-mock": "^5.3.0",
    "axios": "^0.21.3",
    "codecov": "^3.8.3",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "jest-circus": "^27.1.0",
    "jest-junit": "^12.2.0",
    "mock-req-res": "^1.2.0",
    "node-flywaydb": "^3.0.7",
    "nodemon": "^2.0.12",
    "pg-format": "^1.0.4",
    "prettier": "^2.4.0",
    "pretty-quick": "^3.1.1",
    "rewire": "^5.0.0",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6",
    "testcontainers": "^7.20.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/__tests__/integrationDbOps.js",
      "<rootDir>/__tests__/integrationDomainOps.js",
      "<rootDir>/__tests__/integrationS3Ops.js",
      "<rootDir>/__tests__/integrationUtils.js",
      "<rootDir>/__tests__/jest.setup.js",
      "<rootDir>/__tests__/mockpool.js",
      "<rootDir>/__tests__/testutils.js",
      "<rootDir>/__tests__/stream/testUtils.js"
    ],
    "maxWorkers": "50%",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/jest.setup.js"
    ],
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner",
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "target/jest-junit"
  },
  "prettier": {
    "bracketSpacing": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "baseUrlPath": "/api/v1"
}
